<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">

  <application>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>fi</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>fi.foyt.fni.faces.locales</base-name>
      <var>locales</var>
    </resource-bundle>
  </application>

  <lifecycle>
    <phase-listener>fi.foyt.fni.jsf.PostRedirectMessagesSupport</phase-listener>
  </lifecycle>

  <factory>
    <exception-handler-factory>fi.foyt.fni.jsf.ExceptionHandlerFactory</exception-handler-factory>
  </factory>
  
</faces-config>
