<div title="Attach Book File" class="store-dialog attach-book-file-dialog">

  <h3>Add Product Image</h3>
  <i>Note that images larger than 800x800 will be automatically resized</i>

  <div class="dialog-section">
    <div class="progress">
      <div class="bar" style="width: 0%;"></div>
      <div class="text"></div>
    </div>
  
    <label>Files</label>
    <div>
      <input type="file" name="files" data-url="{url}" multiple="multiple">
    </div>
  </div>
  
</div>